{
  "manifest_version": 3,
  "name": "Notix",
  "version": "2.0",
  "description": "A Chrome extension that helps in saving temporary notes",
  "author": "Tran Nguyen Thuong Truong",
  "homepage_url": "https://thuongtruong1009.github.io/notix",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Notix"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "modules/scripts/settings.js",
        "modules/scripts/voice_to_text.js",
        "modules/scripts/variables.js",
        "modules/third-party/domtoimg.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}